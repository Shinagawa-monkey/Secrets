<%- include('partials/header') %>

<div class="form-signin container mt-5">
  <!-- Makes POST request to /login route -->
  <form action="/login" method="POST">

    <i class="fas fa-key fa-2x mb-2" width="72" height="57"></i>
    <h1 class="h3 mb-3 fw-normal">Sign in to Secrets</h1>

    <div class="form-floating">
      <input type="email" class="form-control" name="username" value="<%= username %>" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email</label>
    </div>

    <div class="form-floating">
      <input type="password" class="form-control" name="password" value="<%= password %>" id="floatingPassword" placeholder="Password" aria-describedby="passwordHelpBlock">
      <label for="floatingPassword">Password</label>
      <div id="passwordHelpBlock" class="form-text">
        <%= errMsg %>
      </div>
    </div>

    <button type="submit" class="w-100 btn btn-lg btn-dark">Sign In</button>
  </form>
  <br>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
          <i class="fab fa-google"></i>
          Sign In with Google
        </a>
      </div>
      <div class="card-body">
        <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
          <i class="fab fa-facebook"></i>Sign In with Facebook
        </a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
