<%- include('partials/header') %>

<div class="p-5 rounded-lg m-3 text-center">
  <i class="fas fa-key fa-6x"></i>
  <h1 class="display-4 fw-normal"> You've Discovered My Secret! </h1>
  <% usersWithSecrets.forEach((user) => { %>
  <% user.secret.forEach((secret) => { %>
  <p class="lead bg-dark text-white fs-3 fw-semibold"><%= secret %></p>
  <% }); %>
  <% }) %>

  <hr class="my-4">
  <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
  <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
</div>

<%- include('partials/footer') %>
